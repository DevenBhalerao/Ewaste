<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:layout_weight="0.68"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/order_fragment_ID_label"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="13dp"
                android:layout_marginTop="22dp"
                android:ems="10"
                android:text="ID: " />

            <TextView
                android:id="@+id/order_fragment_Type_label"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/order_fragment_ID_label"
                android:layout_below="@+id/order_fragment_ID_label"
                android:layout_marginTop="21dp"
                android:text="Type : " />

            <TextView
                android:id="@+id/order_fragment_Count_label"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/order_fragment_Type_label"
                android:layout_below="@+id/order_fragment_Type_label"
                android:layout_marginTop="25dp"
                android:text="Count : " />

            <TextView
                android:id="@+id/order_fragment_ID_field"
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/order_fragment_ID_label"
                android:layout_marginStart="17dp"
                android:layout_toEndOf="@+id/order_fragment_ID_label" />


            <TextView
                android:id="@+id/order_fragment_Type_field"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/order_fragment_Type_label"
                android:layout_alignBottom="@+id/order_fragment_Type_label"
                android:layout_alignStart="@+id/order_fragment_ID_field" />

            <TextView
                android:id="@+id/order_fragment_Count_field"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/order_fragment_Count_label"
                android:layout_alignBottom="@+id/order_fragment_Count_label"
                android:layout_alignStart="@+id/order_fragment_ID_field"
                android:layout_marginBottom="15dp" />

            <ImageButton
                android:id="@+id/scan_barcode_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:srcCompat="@android:drawable/ic_menu_camera"
                android:layout_above="@+id/order_fragment_Type_field"
                android:layout_toEndOf="@+id/order_fragment_ID_field"
                android:layout_marginStart="35dp" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>
