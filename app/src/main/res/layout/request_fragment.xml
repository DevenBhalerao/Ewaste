<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="0.68"
        card_view:cardCornerRadius="4dp"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/request_fragment_ID_label"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="13dp"
                android:layout_marginTop="22dp"
                android:ems="10"
                android:text="ID: " />

            <TextView
                android:id="@+id/request_fragment_Address_label"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/request_fragment_ID_label"
                android:layout_below="@+id/request_fragment_ID_label"
                android:layout_marginTop="30dp"
                android:text="Address: " />

            <TextView
                android:id="@+id/request_fragment_Items_Count_label"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/request_fragment_Address_label"
                android:layout_below="@+id/request_fragment_Address_label"
                android:layout_marginTop="21dp"
                android:text="Items Count : " />



            <TextView
                android:id="@+id/request_fragment_ID_field"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/request_fragment_Address_label"
                android:layout_alignStart="@+id/request_fragment_Address_field" />

            <TextView
                android:id="@+id/request_fragment_Address_field"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/request_fragment_Address_label"
                android:layout_alignBottom="@+id/request_fragment_Address_label"
                android:layout_toEndOf="@+id/request_fragment_Address_label"
                android:layout_marginStart="17dp" />

            <TextView
                android:id="@+id/request_fragment_Items_Count_field"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/request_fragment_Items_Count_label"
                android:layout_alignBottom="@+id/request_fragment_Items_Count_label"
                android:layout_alignStart="@+id/request_fragment_Address_field"
                android:layout_marginBottom="25dp"/>

            <Button
                android:id="@+id/view_request_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/request_fragment_Items_Count_label"
                android:layout_marginEnd="20dp"
                android:text="View"
                android:textColor="#ffffff"
                android:theme="@style/MyButton" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>
